---
import CardLayout from "./cardLayout.astro";
---

<CardLayout title="seeing" hrefname="seeeing">
  <div class="seeing"></div>
</CardLayout>

<style>
  body {
  }

  .seeing {
    width: 30rem;
    height: 30rem;
    position: relative;
    margin: 0 auto;
  }

  .seeing::before {
    position: absolute;
    top: -10px;
    left: 10px;
    content: "";
    width: 30rem;
    height: 30rem;

    transform: rotate(-15deg);
    background: 
    
      /*head*/
      linear-gradient(mediumturquoise, mediumturquoise) 65% 30% / 1rem 4rem,
      /*head curve*/
        radial-gradient(ellipse at left, white 50%, transparent 50.5%) 69% 31% /
        0.5rem 2.5rem,
      /*head curve*/
        radial-gradient(ellipse at left, aqua 50%, transparent 50.5%) 70% 29.3% /
        2rem 5rem,
      /*head curve splinters top*/
        radial-gradient(
          ellipse at bottom,
          mediumturquoise 50%,
          transparent 50.5%
        )
        65.2% 24.8% / 1.4rem 0.5rem,
      /*head curve splinters bottom*/
        radial-gradient(ellipse at top, mediumturquoise 50%, transparent 50.5%)
        65.2% 39.9% / 1.4rem 0.5rem,
      /*tail curve splinters top*/
        radial-gradient(
          ellipse at bottom,
          mediumturquoise 50%,
          transparent 50.5%
        )
        14.5% 27.2% / 1.4rem 0.5rem,
      /*tail curve splinters bottom*/
        radial-gradient(ellipse at top, mediumturquoise 50%, transparent 50.5%)
        14.5% 37.2% / 1.4rem 0.5rem,
      /*body*/ linear-gradient(darkcyan, darkcyan) 50% 30.6% / 8rem 3rem,
      /*tail 1*/ linear-gradient(mediumturquoise, mediumturquoise) 33% 31% /
        4rem 2.5rem,
      /*tail 3*/ linear-gradient(mediumturquoise, mediumturquoise) 15% 31% /
        1rem 2.5rem,
      /*tail 2*/ linear-gradient(darkcyan, darkcyan) 20% 31.7% / 5rem 1.5rem;

    background-repeat: no-repeat;
  }

  /*stand*/
  .seeing:after {
    position: absolute;
    top: 0;
    left: 0;
    content: "";
    width: 30rem;
    height: 30rem;
    background: 
     /*head circle*/
      radial-gradient(
          ellipse,
          mediumturquoise 25%,
          black 20.5%,
          black 50%,
          transparent 50.5%
        )
        41% 31% / 3.5rem 3.5rem,
      /*handle 1*/ linear-gradient(lightgrey, lightgrey) 41.8% 43% / 1.5rem 5rem,
      /* curve bottom*/
        radial-gradient(ellipse at bottom, black 50%, transparent 50.5%) 41.2%
        56.4% / 3.5rem 0.5rem,
      /* curve bottom*/ linear-gradient(black, black) 41.5% 58% / 2.5rem 0.5rem,
      /*stand seat*/ linear-gradient(lightgrey, lightgrey) 40% 61.5% / 6rem
        1.5rem,
      /*left tripod*/
        linear-gradient(
          100deg,
          transparent 10%,
          darkcyan 10%,
          darkcyan 50%,
          transparent 50.5%
        )
        35.5% 69% / 4rem 3rem,
      /*left long tripod*/
        linear-gradient(
          100deg,
          transparent 40%,
          lightgrey 40%,
          lightgrey 50%,
          transparent 50.5%
        )
        27.9% 89% / 8rem 8rem,
      /*center tripod*/ linear-gradient(darkcyan, darkcyan) 41.5% 69% / 1.7rem
        3rem,
      /*center long tripod*/ linear-gradient(lightgrey, lightgrey) 41.9% 95% /
        0.8rem 8rem,
      /*right tripod*/
        linear-gradient(
          -100deg,
          transparent 10%,
          darkcyan 10%,
          darkcyan 50%,
          transparent 50.5%
        )
        45.9% 69% / 4rem 3rem,
      /*right long tripod*/
        linear-gradient(
          -100deg,
          transparent 40%,
          lightgrey 40%,
          lightgrey 50%,
          transparent 50.5%
        )
        49.9% 89% / 8rem 8rem,
      /* curve splinters center long tripod bottom*/
        radial-gradient(ellipse at bottom, black 50%, transparent 50.5%) 41.6%
        97% / 2.1rem 0.5rem,
      /* curve splinters left long tripod bottom*/
        radial-gradient(ellipse at bottom, black 50%, transparent 50.5%) 28.5%
        92.6% / 2.1rem 0.5rem,
      /* curve splinters right long tripod bottom*/
        radial-gradient(ellipse at bottom, black 50%, transparent 50.5%) 54%
        92.6% / 2.1rem 0.5rem,
      linear-gradient(black, black) 41.7% 98.6% / 1.5rem 0.5rem,
      linear-gradient(black, black) 28.8% 94% / 1.5rem 0.5rem,
      linear-gradient(black, black) 53.8% 94% / 1.5rem 0.5rem,
      /* curve splinters bottom*/
        radial-gradient(ellipse at top, lightgrey 50%, transparent 50.5%) 41.6%
        53.4% / 2.1rem 0.5rem,
      /*handle 2*/ linear-gradient(black, black) 41.9% 54% / 0.8rem 2rem;

    background-repeat: no-repeat;
  }
</style>
