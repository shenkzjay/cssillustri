---
import CardLayout from "./cardLayout.astro";
---

<CardLayout
  title="Witchy"
  hrefname="https://codepen.io/Olajide-Seun/pen/XWOKmWQ"
>
  <div
    class="witchy"
    aria-label="a silhoutte css drawing of a witch riding a broom across a white circled moon"
  >
  </div>
</CardLayout>

<style>
  .witchy {
    width: 100vmin;
    height: 100vmin;
    border: 1px solid black;
    margin: 0 auto;
    background: radial-gradient(ellipse, #e2e2e2 70%, transparent 70.5%) 0 0 /
      100% 100%;
    position: relative;
  }

  .witchy::before {
    width: 100vmin;
    height: 100vmin;
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    background:
    /*cap*/
      conic-gradient(
          transparent 100deg,
          black 100.5deg,
          black 130deg,
          transparent 130deg,
          transparent,
          280deg,
          transparent 360deg
        )
        0 0 / 40vmin 34vmin,
      radial-gradient(ellipse, black 50%, transparent 50.5%) 19% 16% / 5vmin
        5vmin,
      /*hair*/
        radial-gradient(
          ellipse at 20% 0%,
          transparent 30%,
          black 30%,
          black 50%,
          transparent 50.5%
        )
        41% 18% / 15vmin 10vmin,
      /*cape*/
        radial-gradient(
          ellipse at 30% 0%,
          transparent 30%,
          black 30%,
          black 50%,
          transparent 50.5%
        )
        10% 38% / 40vmin 20vmin,
      radial-gradient(
          ellipse at 10% 0%,
          transparent 30%,
          black 30%,
          black 50%,
          transparent 50.5%
        )
        0% 48% / 45vmin 20vmin,
      /*face*/ radial-gradient(ellipse, black 50%, transparent 50.5%) 40% 22% /
        15vmin 18vmin,
      linear-gradient(45deg, black 50%, transparent 50.5%) 47.5% 25% / 5vmin
        5vmin,
      /*body*/
        linear-gradient(
          135deg,
          transparent 20%,
          black 20.5%,
          black 50%,
          transparent 50.5%
        )
        29% 46% / 20vmin 20vmin,
      linear-gradient(
          135deg,
          transparent 20%,
          black 20.5%,
          black 50%,
          transparent 50.5%
        )
        36% 35% / 10vmin 10vmin,
      /*hand*/
        linear-gradient(
          25deg,
          transparent 20%,
          black 20.5%,
          black 50%,
          transparent 50.5%
        )
        43% 35% / 15vmin 15vmin,
      radial-gradient(ellipse at left, black 50%, transparent 50.5%) 17.5% 82.5% /
        5vmin 15vmin,
      linear-gradient(black, black) 16% 81% / 1.5vmin 11vmin,
      linear-gradient(
          transparent 20%,
          black 20.5%,
          black 50%,
          transparent 50.5%
        )
        54% 44% / 15vmin 15vmin,
      radial-gradient(ellipse, black 50%, transparent 50.5%) 62.5% 42% / 10vmin
        6vmin,
      /*leg*/
        linear-gradient(
          25deg,
          transparent 20%,
          black 20.5%,
          black 50%,
          transparent 50.5%
        )
        26% 58% / 15vmin 15vmin,
      linear-gradient(
          25deg,
          transparent 20%,
          black 20.5%,
          black 50%,
          transparent 50.5%
        )
        26% 55% / 15vmin 15vmin,
      linear-gradient(
          145deg,
          transparent 30%,
          black 30.5%,
          black 50%,
          transparent 50.5%
        )
        21% 77% / 20vmin 20vmin,
      radial-gradient(ellipse at left, black 50%, transparent 50.5%) 37% 62.5% /
        5vmin 11vmin,
      /*broom*/
        linear-gradient(
          155deg,
          transparent 47%,
          black 47.5%,
          black 50%,
          transparent 50.5%
        )
        29% 52% / 80vmin 40vmin,
      linear-gradient(
          155deg,
          transparent 20%,
          black 20.5%,
          black 50%,
          transparent 50.5%
        )
        6% 81.5% / 5vmin 30vmin,
      linear-gradient(
          155deg,
          transparent 48%,
          black 48.5%,
          black 50%,
          transparent 50.5%
        )
        0% 83.5% / 6vmin 30vmin,
      linear-gradient(
          155deg,
          transparent 48%,
          black 48.5%,
          black 50%,
          transparent 50.5%
        )
        0% 81.5% / 6vmin 30vmin,
      linear-gradient(
          155deg,
          transparent 48%,
          black 48.5%,
          black 50%,
          transparent 50.5%
        )
        0% 79.5% / 6vmin 30vmin,
      linear-gradient(
          155deg,
          transparent 48%,
          black 48.5%,
          black 50%,
          transparent 50.5%
        )
        0% 77.5% / 6vmin 30vmin,
      linear-gradient(
          155deg,
          transparent 48%,
          black 48.5%,
          black 50%,
          transparent 50.5%
        )
        0% 75.5% / 6vmin 30vmin,
      linear-gradient(
          155deg,
          transparent 48%,
          black 48.5%,
          black 50%,
          transparent 50.5%
        )
        0% 73.5% / 6vmin 30vmin,
      /*body curve*/
        radial-gradient(ellipse at 100% 40%, black 50%, transparent 50.5%) 15%
        56% / 10vmin 18vmin;
    background-repeat: no-repeat;
    animation: fly 5s linear infinite;
    transform: translateX(-100%) scale(0.5);
  }

  @keyframes fly {
    0% {
      transform: translateX(-80%) translateY(80px) scale(0.5);
    }
    100% {
      transform: translateX(80%) translateY(-80px) scale(0.5);
    }
  }
</style>
