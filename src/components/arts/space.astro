      /*bottom wing accent shade*/
        linear-gradient(rgba(255, 228, 196, 0.4), rgba(255, 228, 196, 0.4)) 50%
        96% / 4.5rem 0.8rem,
      /*divider*/ linear-gradient(brown, brown) 50% 12% / 0.3rem 10rem,
      /*top wing panel*/
