---
import CardLayout from "./cardLayout.astro";
---

<CardLayout
  title="sparkle"
  hrefname="https://codepen.io/Olajide-Seun/pen/poqGLLE"
>
  <div class="sparkle"></div>
</CardLayout>

<style>
  .sparkle {
    --salmonlight: orange;
    --pinkbulb: yellow;
    --blackbulb: green;
    width: 30rem;
    height: 30rem;
    position: relative;
    margin: 0px auto;
  }

  .sparkle::before {
    width: 30rem;
    height: 30rem;
    position: absolute;
    top: 0;
    bottom: 0;
    content: "";
    background:
      radial-gradient(
          ellipse at right,
          rgba(0, 0, 0, 0.08) 50%,
          transparent 80.5%
        )
        32.5% 55% / 2rem 4rem,
      radial-gradient(
          ellipse at right,
          rgba(0, 0, 0, 0.08) 50%,
          transparent 80.5%
        )
        64.5% 55% / 2rem 4rem,
      /*bulb*/
        radial-gradient(ellipse, var(--salmonlight) 50%, transparent 50.5%)
        34.5% 55.5% / 4.8rem 4.8rem,
      /*bulb glow*/
        radial-gradient(
          ellipse,
          transparent 30%,
          var(--salmonlight) 40%,
          transparent 80.5%
        )
        33.5% 56% / 6rem 6rem,
      /*fitting*/ linear-gradient(grey, grey) 36.5% 48% / 1.5rem 0.5rem,
      /*rod*/ linear-gradient(grey, grey) 37% 40% / 0.3rem 4rem,
      /*bulb center*/
        radial-gradient(ellipse, var(--salmonlight) 48%, transparent 50.5%) 70%
        55.5% / 4.8rem 4.8rem,
      /*bulb center glow*/
        radial-gradient(
          ellipse,
          transparent 30%,
          var(--salmonlight) 40%,
          transparent 80.5%
        )
        71% 56% / 6rem 6rem,
      /*fitting*/ linear-gradient(grey, grey) 67.8% 48% / 1.5rem 0.5rem,
      /*rod*/ linear-gradient(grey, grey) 67% 40% / 0.3rem 4rem;

    background-repeat: no-repeat;
    animation: sparkle 5s linear infinite;
  }

  .sparkle::after {
    width: 30rem;
    height: 30rem;
    position: absolute;
    top: 0;
    bottom: 0;
    content: "";
    background:
      radial-gradient(
          ellipse at right,
          rgba(0, 0, 0, 0.08) 50%,
          transparent 80.5%
        )
        78.5% 73% / 2rem 4rem,
      radial-gradient(
          ellipse at right,
          rgba(0, 0, 0, 0.08) 50%,
          transparent 80.5%
        )
        46.5% 73% / 2rem 4rem,
      radial-gradient(
          ellipse at right,
          rgba(0, 0, 0, 0.08) 50%,
          transparent 80.5%
        )
        15% 73% / 2rem 4rem,
      /*bulb*/
        radial-gradient(ellipse, var(--salmonlight) 50%, transparent 70.5%) 50%
        73.5% / 4.5rem 4.5rem,
      /*bulb glow*/
        radial-gradient(
          ellipse,
          transparent 30%,
          var(--salmonlight) 40%,
          transparent 80.5%
        )
        50% 75% / 6rem 6rem,
      /*fitting*/ linear-gradient(grey, grey) 50% 64% / 1.5rem 0.5rem,
      /*rod*/ linear-gradient(grey, grey) 50% 50% / 0.3rem 8rem,
      /*bulb*/
        radial-gradient(ellipse, var(--salmonlight) 50%, transparent 70.5%) 85%
        73.5% / 4.5rem 4.5rem,
      /*bulb glow*/
        radial-gradient(
          ellipse,
          transparent 30%,
          var(--salmonlight) 40%,
          transparent 80.5%
        )
        87% 75% / 6rem 6rem,
      /*fitting*/ linear-gradient(grey, grey) 81.2% 64% / 1.5rem 0.5rem,
      /*rod*/ linear-gradient(grey, grey) 80% 50% / 0.3rem 8rem,
      /*bulb*/
        radial-gradient(ellipse, var(--salmonlight) 50%, transparent 50.5%)
        14.5% 73.7% / 4.8rem 4.8rem,
      /*bulb glow*/
        radial-gradient(
          ellipse,
          transparent 30%,
          var(--salmonlight) 40%,
          transparent 80.5%
        )
        12.5% 75% / 6rem 6rem,
      /*fitting*/ linear-gradient(grey, grey) 18.5% 64% / 1.5rem 0.5rem,
      /*rod*/ linear-gradient(grey, grey) 20% 50% / 0.3rem 8rem;
    background-repeat: no-repeat;
    animation: sparkleAfter 5s 1s linear infinite;
  }

  @keyframes sparkle {
    0% {
      background-color: --salmonlight;
    }
    50% {
      --salmonlight: yellow;
    }
    100% {
      --salmonlight: cyan;
    }
  }

  @keyframes sparkleAfter {
    0% {
      background-color: --salmonlight;
    }
    50% {
      --salmonlight: white;
    }
    100% {
      --salmonlight: pink;
    }
  }

  @media screen and (max-width: 800px) {
    .sparkle::after,
    .sparkle::before {
      left: -3rem;
    }
  }
</style>
